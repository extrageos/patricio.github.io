---
import siteConfig from "../config";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{siteConfig.name} | {siteConfig.title}</title>
  </head>
  <body>
    <h1>{siteConfig.name}</h1>
    <h2>{siteConfig.title}</h2>
    <p>{siteConfig.description}</p>

    <section>
      <h2>About Me</h2>
      <p>{siteConfig.aboutMe}</p>
    </section>

    <section>
      <h2>Skills</h2>
      <ul>
        {(siteConfig.skills ?? []).map(skill => (
          <li>
            <strong>{skill.name}</strong>: {skill.description}
          </li>
        ))}
      </ul>
    </section>

    <section>
      <h2>Projects</h2>
      <ul>
        {(siteConfig.projects ?? []).map(project => (
          <li>
            <strong>{project.name}</strong>: {project.description}
          </li>
        ))}
      </ul>
    </section>

    <section>
      <h2>Experience</h2>
      {(siteConfig.experience ?? []).map(exp => (
        <div>
          <h3>{exp.company}</h3>
          <p><em>{exp.title}</em> ({exp.dateRange})</p>
          <ul>
            {(exp.bullets ?? []).map(bullet => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
      ))}
    </section>

    <section>
      <h2>Education</h2>
      {(siteConfig.education ?? []).map(edu => (
        <div>
          <h3>{edu.school}</h3>
          <p>{edu.degree}</p>
          <p>{edu.dateRange}</p>
        </div>
      ))}
    </section>

    <section>
      <h2>Contact</h2>
      <ul>
        <li>Email: <a href={`mailto:${siteConfig.social.email}`}>{siteConfig.social.email}</a></li>
        <li><a href={siteConfig.social.linkedin}>LinkedIn</a></li>
        <li><a href={siteConfig.social.twitter}>Twitter</a></li>
        <li><a href={siteConfig.social.github}>GitHub</a></li>
      </ul>
    </section>
  </body>
</html>
