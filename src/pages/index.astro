---
import siteConfig from "../config";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{siteConfig.name} | {siteConfig.title}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background: #f9f9f9;
        color: #222;
        margin: 0;
        padding: 0;
      }
      header {
        background: {siteConfig.accentColor};
        color: #fff;
        padding: 2rem;
        text-align: center;
      }
      section {
        padding: 2rem;
        max-width: 900px;
        margin: auto;
      }
      h2 {
        border-bottom: 2px solid #ddd;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
      }
      .card {
        background: #fff;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{siteConfig.name}</h1>
      <h2>{siteConfig.title}</h2>
      <p>{siteConfig.description}</p>
    </header>

    <!-- About Me -->
    <section>
      <h2>About Me</h2>
      <p>{siteConfig.aboutMe}</p>
    </section>

    <!-- Skills -->
    <section>
      <h2>Skills</h2>
      <div class="grid">
        {(siteConfig.skills ?? []).map(skill => (
          <div class="card">
            <h3>{skill.name}</h3>
            <p>{skill.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Projects -->
    <section>
      <h2>Projects</h2>
      <div class="grid">
        {(siteConfig.projects ?? []).map(project => (
          <div class="card">
            <h3>{project.name}</h3>
            <p>{project.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience -->
    <section>
      <h2>Experience</h2>
      {(siteConfig.experience ?? []).map(exp => (
        <div class="card">
          <h3>{exp.company}</h3>
          <p><em>{exp.title}</em> ({exp.dateRange})</p>
          <ul>
            {(exp.bullets ?? []).map(bullet => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
      ))}
    </section>

    <!-- Education -->
    <section>
      <h2>Education</h2>
      {(siteConfig.education ?? []).map(edu => (
        <div class="card">
          <h3>{edu.school}</h3>
          <p>{edu.degree}</p>
          <p>{edu.dateRange}</p>
        </div>
      ))}
    </section>

    <!-- Contact -->
    <section>
      <h2>Contact</h2>
      <ul>
        <li>Email: <a href={`mailto:${siteConfig.social.email}`}>{siteConfig.social.email}</a></li>
        <li><a href={siteConfig.social.linkedin}>LinkedIn</a></li>
        <li><a href={siteConfig.social.twitter}>Twitter</a></li>
        <li><a href={siteConfig.social.github}>GitHub</a></li>
      </ul>
    </section>
  </body>
</html>
